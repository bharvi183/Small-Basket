<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Supplier.supplier_main"
    android:orientation="vertical"
    android:background="@drawable/login_back">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="19dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/setprofile"
                        android:layout_width="166dp"
                        android:layout_height="138dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="You are allowed to add data" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:text="Add Your Product to sell" />

                    <EditText
                        android:id="@+id/supplier_name"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/textfield_background"
                        android:hint="Your ID"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Click on image to add product picture"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/select_image"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="4dp"
                        android:background="#68FDFCFC"
                        android:padding="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/camera"/>

                    <EditText
                        android:id="@+id/product_name"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textfield_background"
                        android:hint="Product Name"
                        android:inputType="textCapWords"
                        android:textAlignment="center" />


                    <EditText
                        android:id="@+id/product_price"
                        android:layout_width="300dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textfield_background"
                        android:hint="Product Price"
                        android:inputType="numberDecimal"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/product_details"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textfield_background"
                        android:hint="Product Details"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/number_of_product"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textfield_background"
                        android:hint="No. of Items"
                        android:inputType="numberSigned"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Add Category To Sell Your Project" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text="---Select Category---" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#111111"
                            android:text="Fruits"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#050505"
                            android:text="Vegetables"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#0F0F0F"
                            android:text="Coldrinks"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#050505"
                            android:text="Chocolets"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#0C0C0C"
                            android:text="Unpacked Foodgrains"
                            android:textAlignment="center" />


                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#020202"
                            android:text="oil"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#070707"
                            android:text="Masalas"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#020202"
                            android:text="Home Cleaning"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#0C0C0C"
                            android:text="Dairy Product"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#131212"
                            android:text="Bakery Snacks"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#111111"
                            android:text="Beauty Products"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#0F0F0F"
                            android:text="Baby Care"
                            android:textAlignment="center" />

                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#050505"
                            android:text="Body Care"
                            android:textAlignment="center" />
                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:buttonTint="#0F0F0F"
                            android:text="Packed Foodgrains"
                            android:textAlignment="center" />
                        <RadioButton
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="#7CF5F7F7"
                            android:buttonTint="#050505"
                            android:text="Packet Snacks"
                            android:textAlignment="center" />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/product_category"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textfield_background"
                        android:hint="Product Category"
                        android:inputType="textCapWords"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/add_product"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_background"
                        android:text="Add"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Please Close Your App Frome Background And Restart After Adding Products."
                        android:textAlignment="center"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:textAlignment="center"
                        android:text="THANK YOU"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-black"/>



                </LinearLayout>


            </LinearLayout>
        </ScrollView>



</RelativeLayout>